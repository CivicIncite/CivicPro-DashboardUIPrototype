<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="ui form">
        <%= form_for(@record) do |f| %>
          <% if @record.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:</h2>

              <ul>
              <% @record.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :description %><br>
            <%= f.text_field :description %>
          </div>
          <div class="field">
            <%= f.label :record_type %>
            <%= f.select(:record_type, ['Code Amendments', 'Legislative Status', 'Public Meetings'], {}) %>
          </div>
          <div class="field">
            <%= f.label :legislation_status %>
            <%= f.select(:legislation_status, ['Approved', 'Deferred', 'Withdrawn', 'Denied', 'Passed on 1st Reading', 'Passed on 2nd Reding'], {}) %>
          </div>
          <div class="field">
            <%= f.label :government %><br>
            <%= f.text_field :government%>
          </div>
          <div class="field">
            <%= f.label :agency %><br>
            <%= f.text_field :agency%>
          </div>
          <div class="field">
            <%= f.label :date %><br>
            <%= f.datetime_select :date, :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' } %>
          </div>
          <div class="field">
            <%= f.label :address %><br>
            <%= f.text_field :address %>
          </div>
          <div class="field">
            <%= f.label :agenda_link %><br>
            <%= f.text_field :url %>
          </div>
          <div class="actions">
            <%= f.submit 'Save' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
