<div class="card-block">
  <div class="d-flex justify-content-between align-items-center">
    <h3 class="mb-0"><%= lobbyist.name %></h3>
    <%= fa_icon "star-o", class:"record-item-star"%>
  </div>
  <% if lobbyist.date %>
    <p class="muted mt-1"><%= lobbyist.date.strftime("%b %d, %Y") %></p>
    <p class="record-description">Principal: <%= lobbyist.principal %></p>
  <% end %>
  <div class="d-flex justify-content-between align-items-end">
    <span class="badge badge-primary"><%= lobbyist.government %></span>
    <%= link_to 'View details', lobbyist_path(lobbyist), data: {toggle: "modal", target: "#view-details"}, remote: true %>
  </div>
</div>

<div class="modal fade" id="view-details" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
 <div class="modal-dialog">
   <div class="modal-content">
     <div class="modal-header">
       <h4 class="modal-title" id="myModalLabel"><%= lobbyist.name %></h4>
       <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
     </div>
     <div class="modal-body">
       <p class="font-weight-bold">Principal</p>
       <span class="note"><%= lobbyist.principal %></span>
       <p class="font-weight-bold mt-2">Issue</p>
       <span class="note"><%= lobbyist.description %></span>
       <p class="font-weight-bold mt-2">Government</p>
       <span class="note"><%= lobbyist.government %></span>
       <% if lobbyist.date %>
        <p class="font-weight-bold mt-2">Date</p>
        <span class="note"><%= lobbyist.date.strftime("%b %d, %Y") %></span>
        <% end %>
       <p class="font-weight-bold mt-2">Fee</p>
       <span class="note"><%= lobbyist.fee %> per hour</span>
     </div>
     <div class="modal-footer">
       <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
     </div>
   </div>
 </div>
</div>
